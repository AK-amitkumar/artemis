<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="project_summary_report_view" model="ir.actions.act_window">
            <field name="name">Summary Analysis</field>
            <field name="res_model">report.project.summary</field>
            <field name="view_type">form</field>
            <field name="view_mode">pivot,graph</field>
        </record>
		
		<record id="project_summary_report_pivot" model="ir.ui.view">
            <field name="model">report.project.summary</field>
            <field name="arch" type="xml">
                <pivot string="Summary Analysis" disable_linking="False">
                    <field name="date_period" interval="year" type="row"/>
                    <field name="total_target" type="measure"/>
	                <field name="total_amount" type="measure"/>
                </pivot>
            </field>
        </record>
		
		<record id="project_summary_report_graph" model="ir.ui.view">
            <field name="model">report.project.summary</field>
            <field name="arch" type="xml">
                <graph string="Summary Analysis" type="line">
	                <field name="total_target" type="row"/>
	                <field name="total_amount" operator="+"/>
                </graph>
            </field>
        </record>
		
		<menuitem id="project_summary_report"
		          parent="project_report_menu"
		          name="Summary"
		          action="project_summary_report_view"
		          sequence="1"/>
	</data>
</odoo>