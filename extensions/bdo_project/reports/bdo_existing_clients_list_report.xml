<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="project_existing_clients_list_report_view" model="ir.actions.act_window">
            <field name="name">Business Service Outsourcing</field>
            <field name="res_model">report.existing.clients.list</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="project_invoice_view_search" model="ir.ui.view">
		    <field name="model">report.existing.clients.list</field>
		    <field name="arch" type="xml">
			    <search string="Search">
				    <field name="client_name"/>
                    <field name="el_number" />
				    <field name="currency_id"/>
                    <field name="employee_id"/>
                    <field name="remarks"/>
				    <group expand="0" string="Group By">
					    <filter string="Type" domain="[]" context="{'group_by':'type'}"/>
					    <filter string="Source" domain="[]" context="{'group_by':'source'}"/>
					    <filter string="Engagement Period" domain="[]" context="{'group_by':'date_engagement_letter'}"/>
                        <filter string="Reminder Period" domain="[]" context="{'group_by':'date_reminder_engagement_letter'}"/>
				    </group>
			    </search>
		    </field>
	    </record>

        <record id="project_existing_clients_list_report_tree" model="ir.ui.view">
            <field name="model">report.existing.clients.list</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="client_name" />
                    <field name="type" />
                    <field name="date_engagement_letter" />
                    <field name="el_number" />
                    <field name="date_expiry_engagement_letter"/>
                    <field name="currency_id" />
                    <field name="amount_rate"/>
                    <field name="amount"/>
                    <field name="amount_total" sum="Total Revenue (IDR)"/>
                    <field name="employee_id" />
                    <field name="date_reminder_engagement_letter"/>
                    <field name="remarks"/>
                </tree>

            </field>
        </record>

		<menuitem id="project_existing_clients_list_report"
		          parent="project_report_menu"
		          name="Clients List"
		          action="project_existing_clients_list_report_view"
		          sequence="10"/>
	</data>
</odoo>