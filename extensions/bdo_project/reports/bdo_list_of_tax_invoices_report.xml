<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <record id="project_list_of_tax_invoices_report_view_search" model="ir.ui.view">
		    <field name="model">report.list.of.tax.invoices</field>
		    <field name="arch" type="xml">
			    <search string="Search">
				    <field name="partner_id"/>
                    <field name="service_id" />
				    <field name="tax_invoice_number"/>
                    <field name="employee_id"/>
                    <filter string="Pending" domain="[('state','=','pending')]"/>
				    <filter string="Received" domain="[('state','=','received')]"/>
				    <group expand="0" string="Group By">
					    <filter string="Month" domain="[]" context="{'group_by':'date_invoice'}"/>
				    </group>
			    </search>
		    </field>
	    </record>

		<record id="project_list_of_tax_invoices_report_view" model="ir.actions.act_window">
            <field name="name">List of Tax Invoices</field>
            <field name="res_model">report.list.of.tax.invoices</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_search_id" ref="project_list_of_tax_invoices_report_view_search"/>
        </record>

        <record id="project_list_of_tax_invoices_report_view_tree" model="ir.ui.view">
            <field name="model">report.list.of.tax.invoices</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="partner_id"/>
                    <field name="service_id"/>
                    <field name="date_period"/>
                    <field name="date_invoice"/>
                    <field name="tax_invoice_number" />
                    <field name="amount_total" sum="Amount Total" />
                    <field name="employee_id"/>
                    <field name="service_code" />
                    <field name="state" />
                </tree>
            </field>
        </record>

		<menuitem id="project_list_of_tax_invoices_report"
		          parent="project_report_menu"
		          name="List of Tax Invoices"
		          action="project_list_of_tax_invoices_report_view"
		          sequence="20"/>
	</data>
</odoo>