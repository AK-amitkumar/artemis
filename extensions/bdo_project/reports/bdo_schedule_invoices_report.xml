<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <record id="project_schedule_invoices_report_view_search" model="ir.ui.view">
		    <field name="model">report.schedule.invoices</field>
		    <field name="arch" type="xml">
			    <search string="Search">
                    <field name="employee_id"/>
				    <field name="partner_id"/>
                    <field name="service_id" />
				    <field name="no_invoice"/>
				    <group expand="0" string="Group By">
					    <filter string="PIC" domain="[]" context="{'group_by':'employee_id'}"/>
				    </group>
			    </search>
		    </field>
	    </record>

		<record id="project_schedule_invoices_report_view" model="ir.actions.act_window">
            <field name="name">Schedule Invoices</field>
            <field name="res_model">report.schedule.invoices</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_search_id" ref="project_schedule_invoices_report_view_search"/>
        </record>

        <record id="project_schedule_invoices_report_view_tree" model="ir.ui.view">
            <field name="model">report.schedule.invoices</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id"/>
                    <field name="partner_id"/>
                    <field name="service_id"/>
                    <field name="date_on_scheduled"/>
                    <field name="date_period"/>
                    <field name="date_invoice"/>
                    <field name="no_invoice" />
                    <field name="amount" sum="Amount Total" />
                    <field name="amount_total" sum="Amount Total(IDR)" />
                    <field name="remarks" />
                </tree>
            </field>
        </record>

		<menuitem id="project_schedule_invoices_report"
		          parent="project_report_menu"
		          name="Schedule Invoice"
		          action="project_schedule_invoices_report_view"
		          sequence="24"/>
	</data>
</odoo>