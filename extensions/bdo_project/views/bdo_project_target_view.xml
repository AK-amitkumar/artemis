<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="project_target_view" model="ir.actions.act_window">
            <field name="name">Project Target</field>
            <field name="res_model">bdo.project.target</field>
            <field name="view_type">form</field>
			<field name="view_mode">tree,form,graph</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                 <p class="oe_view_nocontent_create">
                    Click to create a new target project.<br/>
                </p>
            </field>
        </record>
		
		<record id="project_target_form" model="ir.ui.view">
			<field name="name">Project Target Form</field>
			<field name="model">bdo.project.target</field>
			<field name="arch" type="xml">
				<form string="Project Target Form">
					<header>
						<field name="state" widget="statusbar" statusbar_visible="draft,cancel,posted" />
					</header>
					<sheet>
						<group col="4" colspan="4" name="project_fields">
							<field name="date_period"/>
							<field name="name"/>
						</group>
						<notebook colspan="4">
							<page string="Currencies">
								<field name="lines" colspan="4" nolabel="1" groups="base.group_multi_currency">
									<tree string="Project lines" editable="bottom">
										<field name="currency_id"/>
										<field name="rate"/>
										<field name="amount" widget="monetary"/>
										<field name="amount_rate"/>
									</tree>
								</field>
								<group class="oe_subtotal_footer oe_right" colspan="2" name="order_total">
									<div class="oe_subtotal_footer_separator oe_inline">
										<label for="amount_total" />
										<button name="button_dummy" states="draft" string="(update)"
										        class="oe_edit_only oe_link"/>
									</div>
									<field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary"/>
								</group>
								<div class="oe_clear"/>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<record id="project_target_view_search" model="ir.ui.view">
		    <field name="model">bdo.project.target</field>
		    <field name="arch" type="xml">
			    <search string="Search Project Invoice">
				    <field name="year_period"/>
				    <field name="name"/>
				    <group expand="0" string="Group By">
					    <filter string="Month" domain="[]" context="{'group_by':'date_period'}"/>
					    <filter string="Year"  domain="[]" context="{'group_by':'year_period'}"/>
				    </group>
			    </search>
		    </field>
	    </record>
		
		<record id="project_target_tree" model="ir.ui.view">
            <field name="name">Project Target</field>
            <field name="model">bdo.project.target</field>
			<field name="search_view_id" ref="bdo_project.project_target_view_search" />
            <field name="arch" type="xml">
                <tree string="Project Target">
                    <field name="date_period"/>
	                <field name="year_period"/>
                    <field name="name"/>
	                <field name="amount_total" sum="BSO Target"/>
                </tree>
            </field>
        </record>
		
		<record id="project_target_graph" model="ir.ui.view">
			<field name="name">Project Graph</field>
			<field name="model">bdo.project.target</field>
			<field name="arch" type="xml">
				<graph string="Project Target Chart">
					<field name="date_period" type="row"/>
					<field name="amount_total" type="measure"/>
				</graph>
			</field>
		</record>
		
		<menuitem
                id="project_target_menuitem"
                parent="bdo_project_menu"
                name="Target"
                action="bdo_project_target_view"
				groups="bdo_project.group_bdo_crm_coordinator,bdo_project.group_bdo_crm_incharge"
                sequence="5"/>
	</data>
</odoo>