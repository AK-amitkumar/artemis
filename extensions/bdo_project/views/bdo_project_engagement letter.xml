<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="project_engagement_letter_view" model="ir.actions.act_window">
            <field name="name">Engagement Letter</field>
            <field name="res_model">bdo.project.engagement.letter</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                 <p class="oe_view_nocontent_create">
                    Click to create a new engagement letter.<br/>
                </p>
            </field>
        </record>
		
		<record id="project_engagement_letter_form" model="ir.ui.view">
			<field name="name">Project Engagement Letter Form</field>
			<field name="model">bdo.project.engagement.letter</field>
			<field name="arch" type="xml">
				<form string="Engagement Letter Form">
					<sheet>
						<div class="oe_title">
                             <label for="name" class="oe_edit_only"/>
                             <h1>
                                 <field name="name" default_focus="1" placeholder="No. Of EL"/>
                             </h1>
                         </div>
						<field name="date_engagement_letter"/>
						<group>
							<group>
								<field name="invoice_id" />
								<field name="type" widget="radio" />
								<field name="source" widget="radio" />
							</group>
							<group>
								<field name="date_expiry_engagement_letter" />
								<field name="date_reminder_engagement_letter" />
							</group>
						</group>
						<notebook>
							<page string="Teams" autofocus="autofocus">
								<field name="employees" string="Employee Lines" editable="bottom">
									<tree string="Employee">
										<field name="employee_id" />
										<field name="acl"/>
									</tree>
								</field>
							</page>
							
							<page string="Notes">
								<group>
									<field name="remarks" />
								</group>
							</page>
							
							<page string="Our Service">
								<field name="invoices" string="Services Lines" readonly="1">
									<tree string="Service lines">
										<field name="service_id" readonly="1"/>
										<field name="amount" widget="monetary" readonly="1"/>
										<field name="amount_subtotal" readonly="1" />
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>
		
		<record id="project_engagement_letter_tree" model="ir.ui.view">
            <field name="name">Project Engagement Letter Tree</field>
            <field name="model">bdo.project.engagement.letter</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="date_engagement_letter" />
	                <field name="client_name" />
                    <field name="date_expiry_engagement_letter"/>
                    <field name="date_reminder_engagement_letter" />
                    <field name="source" />
                    <field name="type" />
	                <field name="currency" />
	                <field name="amount" />
	                <field name="rate" />
	                <field name="amount_eq" />
	                <field name="remarks" />
                </tree>
            </field>
        </record>
		
		<menuitem id="project_engagement_letter_menuitem"
		          parent="project_menu"
		          name="Engagement Letter"
		          action="project_engagement_letter_view"
		          sequence="1"/>
	</data>
</odoo>