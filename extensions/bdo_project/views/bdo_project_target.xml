			<field name="name">Project Target Line Tree</field>
            <field name="model">bdo.project.target.line</field>
			<field name="arch" type="xml">
				<tree string="Lines">
					<field name="currency_id" readonly="1"/>
					<field name="rate" readonly="1" sum="Total Rate"/>
					<field name="amount" readonly="1" widget="monetary"/>
					<field name="amount_rate" readonly="1" sum="Sum of amount rate"/>
				</tree>
			</field>
		</record>-->
		
		<record id="project_target_tree" model="ir.ui.view">
            <field name="name">Project Target</field>
            <field name="model">bdo.project.target</field>
            <field name="arch" type="xml">
                <tree string="Project Target">
                    <field name="period"/>
                    <field name="name"/>
	                <field name="amount_total"/>
                </tree>
            </field>
        </record>
		
		<record id="project_target_graph" model="ir.ui.view">
			<field name="name">Project Graph</field>
			<field name="model">bdo.project.target</field>
			<field name="arch" type="xml">
				<graph string="Project Target Chart">
					<field name="period" type="row"/>
					<field name="amount_total" type="measure"/>
				</graph>
			</field>
		</record>
		
		<menuitem
                id="project_target_menuitem"
                parent="project_menu"
                name="Project Target"
                action="project_target_view"
                sequence="5"/>
	</data>
</odoo>